<h1>BLOGS</h1>
<p><%= notice %></p>
<table class="table table-striped table-bordered ">
  <thead class="table-dark">
    <tr>
      <th scope="col">Author</th>
      <th scope="col">Title</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
  <tr>
  <td><%= post.author %></td>
  <td><%= post.title %></td>
  <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-primary" %></td>
  <td><%= link_to 'Show', post_path(post), class:"btn btn-info" %></td>
  <td><%= link_to 'Delete', post_path(post), class:"btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>
</tbody>
</table>

