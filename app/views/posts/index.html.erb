<div class="container">
<h1 class="text-center">BLOGS</h1>

<% if notice %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= notice %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>

<table class="table table-striped table-bordered ">
  <thead class="table-dark">
    <tr>
      <th scope="col">Author</th>
      <th scope="col">Title</th>
      <th scope="col">Publish Date</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
  <tr>
  <td><%= post.author %></td>
  <td><%= post.title %></td>
  <td><%= post.created_at.strftime("%m/%d/%Y") %></td>
  <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-primary" %></td>
  <td><%= link_to 'Show', post_path(post), class:"btn btn-info" %></td>
  <td><%= link_to 'Delete', post_path(post), class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %></td>
  <td>Last edited: <%= time_ago_in_words(post.updated_at, include_seconds: true) %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>

