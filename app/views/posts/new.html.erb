<div class="form-container">
<%=form_with model: @post do |form| %>
  <p>
   <%= form.label :author%>
   <%= form.text_field :author %>
  </p>
  <p>
   <%= form.label :title %>
   <%= form.text_field :title%>
  </p>
  <p>
  <%= form.label :content %>
  <%= form.text_area :content%>
 </p>
  <p>
   <%= form.submit "SUBMIT"%>
  </p>
 <%end%>
 </div>


 <p>
 <% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
 <% end %>
 </ul>
 <% end %>
</p>
